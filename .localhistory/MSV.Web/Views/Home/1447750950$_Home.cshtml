<script>
    $(function () {
        // Reference the auto-generated proxy for the hub.
        var lotteryHub = $.connection.lotteryResultHub;
        // Create a function that the hub can call back to display messages.
        lotteryHub.client.ClientUpdateLotteryResult = function (name, message) {
            $(".ketqua_net").html("<div>"+message+"</div>");
        };
        // Get the user name and store it to prepend to messages.

        // Start the connection.
        $.connection.hub.start().done(function () {
            // Call the Send method on the hub.
            getLottery();
        });

        var getLottery = function () {
            var timer = $.timer(function () {
                lotteryHub.server.sendLotteryResult("request", "getlottery");
            });
            timer.set({ time: 5000, autostart: true });
        };
    });
</script>